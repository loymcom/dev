<?xml version="1.0" encoding="utf-8" ?>
<data>
    <!-- Views -->
    <record id="team_m_view_tree" model="ir.ui.view">
        <field name="name">team.m</field>
        <field name="model">team.m</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="model" />
                <field name="state" optional="show" />
                <field name="active" optional="hide" />
            </tree>
        </field>
    </record>
    <record id="team_m_view_form" model="ir.ui.view">
        <field name="name">team.m form</field>
        <field name="model">team.m</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_import_contacts"
                        class="oe_highlight"
                        string="Import Contacts"
                        type="object"
                    />
                    <button
                        name="action_import_products"
                        class="oe_highlight"
                        string="Import Products"
                        type="object"
                    />
                    <button
                        name="action_import_sale_orders"
                        class="oe_highlight"
                        string="Import Sale Orders"
                        type="object"
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <field name="active" invisible="1" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <!-- <div class="oe_button_box" name="button_box">
                        <button
                            name="action_team_m"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-globe"
                        >
                            <span>Teamm Action</span>
                        </button>
                    </div> -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Record Name" />
                        </h1>
                    </div>
                    <group name="main">
                        <field name="model" />
                        <field name="year" widget="char" />
                        <field name="csv" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="team_m_view_search" model="ir.ui.view">
        <field name="name">team.m.view.search</field>
        <field name="model">team.m</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <filter
                    name="name"
                    string="Team M"
                    domain="[('name', '=', 'Team M')]"
                />
            </search>
        </field>
    </record>
    <!-- Actions -->
    <record id="team_m_action" model="ir.actions.act_window">
        <field name="name">Team M</field>
        <field name="res_model">team.m</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="domain">[]</field> -->
        <!-- <field name="context">{}</field> -->
    </record>
    <menuitem
        id="team_m_menu"
        name="Team M"
        action="team_m_action"
        sequence="10"
    />
</data>
