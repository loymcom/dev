<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="teamm_discount_product_view_form" model="ir.ui.view">
        <field name="name">teamm.discount.product.view.form</field>
        <field name="model">teamm.discount.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="variant_ids" widget="many2many_tags"/>
                        <field name="discount_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="teamm_discount_product_view_tree" model="ir.ui.view">
        <field name="name">teamm.discount.product.view.tree</field>
        <field name="model">teamm.discount.product</field>
        <field name="arch" type="xml">
            <tree>
                        <field name="name" optional="show" />
                        <field name="variant_ids" optional="show" widget="many2many_tags" />
                        <field name="discount_ids" optional="show" widget="many2many_tags" />
            </tree>
        </field>
    </record>
    <record id="teamm_discount_product_view_kanban" model="ir.ui.view">
        <field name="name">teamm.discount.product.view.kanban</field>
        <field name="model">teamm.discount.product</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="display_name" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="teamm_discount_product_view_pivot" model="ir.ui.view">
        <field name="name">teamm.discount.product.view.pivot</field>
        <field name="model">teamm.discount.product</field>
        <field name="arch" type="xml">
            <pivot>
            </pivot>
        </field>
    </record>
    <record id="teamm_discount_product_view_search" model="ir.ui.view">
        <field name="name">teamm.discount.product.view.search</field>
        <field name="model">teamm.discount.product</field>
        <field name="arch" type="xml">
            <search>
                        <field name="name" />
                        <field name="variant_ids" />
                        <field name="discount_ids" />
                <group string="Group By">
                    <filter
                        string="Name"
                        name="name"
                        context="{'group_by':'name'}"
                    />
                    <filter
                        string="Variant Ids"
                        name="variant_ids"
                        context="{'group_by':'variant_ids'}"
                    />
                    <filter
                        string="Discount Ids"
                        name="discount_ids"
                        context="{'group_by':'discount_ids'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="teamm_discount_product_action" model="ir.actions.act_window">
        <field name="name">Odoo Product</field>
        <field name="res_model">teamm.discount.product</field>
        <field name="view_mode">tree,kanban,pivot,form</field>
    </record>
</odoo>
