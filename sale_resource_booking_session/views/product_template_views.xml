<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="sale_resource_booking.product_template_form_view" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="resource_booking" string="Booking">
                    <group name="resource_booking" string="Booking Sessions">
                        <field
                            name="booking_session_ids"
                            context="{'form_view_ref':'resource_booking_session.resource_booking_view_form_session'}"
                            nolabel="1"
                            colspan="2"
                        >
                            <tree>
                                <field name="name" />
                                <field name="type_id" />
                                <field name="start" />
                                <field name="stop" />
                            </tree>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
