<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_order_line_view_form" model="ir.ui.view">
        <field name="name">sale.order.line.view.form.event.registration</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.sale_order_line_view_form_readonly" />
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="event_registration_id" readonly="1" />
            </field>
        </field>
    </record>
    <record id="sale_order_line_view_tree" model="ir.ui.view">
        <field name="name">sale.order.line.view.tree.event.registration</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree" />
        <field name="arch" type="xml">
            <tree position="inside">
                <field name="event_registration_id" string="Hubspot ID" optional="hide" />
            </tree>
        </field>
    </record>
</odoo>
