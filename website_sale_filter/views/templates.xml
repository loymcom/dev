<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="website_sale_filter_event_booking_combination"
        inherit_id="website_sale.products_attributes"
        name="Event and Booking Combination Filter"
        active="True"
        customize_show="True"
        priority="999"
    >
    <xpath expr="//form[hasclass('js_attributes')]" position="inside" t-if="len(filters)">
        <t t-foreach="filters" t-as="f">
            <div class="accordion-item nav-item mb-1" t-if="f.records and len(f.records) &gt; 0">
                <h6 class="mb-3">
                    <b class="o_products_attributes_title d-none d-lg-block" t-esc="f.visible_name"/>
                </h6>
                <div t-attf-id="o_products_filters_{{f.records._name}}" class="">
                    <t t-if="f.display_type == 'select'">
                        <select class="form-select css_attribute_select mb-2" t-att-name="f.records._name">
                            <option value="" selected="true">Any</option>
                            <t t-foreach="f.records" t-as="r">
                                <option t-att-value="r.id" t-esc="r.name" t-att-selected="r.id in f.selected_ids"/>
                            </t>
                        </select>
                    </t>
                    <t t-if="f.display_type == 'radio'">
                        <div class="flex-column mb-3">
                            <t t-foreach="f.records" t-as="r">
                                <div class="form-check mb-1">
                                    <input type="checkbox" t-att-name="f.visible_name" class="form-check-input" t-att-id="r.id" t-att-value="r.id" t-att-checked="'checked' if r.id in selected_ids else None"/>
                                    <label class="form-check-label fw-normal" t-att-for="r.id" t-field="r.name"/>
                                </div>
                            </t>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </xpath>
    </template>
