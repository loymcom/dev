<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hotel_room_type_view_form" model="ir.ui.view">
            <field name="name">hotel.room.type hotel_booking</field>
            <field name="model">hotel.room.type</field>
            <field name="inherit_id" ref="hotel.view_hotel_room_type_form" />
            <field name="arch" type="xml">
                <sheet position="inside">
                    <group col="4">
                        <field name="background_color" groups="base.group_no_one" />
                    </group>
                    <field name="room_ids">
                        <tree string='Tables'>
                            <field name="name" />
                            <field name="capacity" />
                        </tree>
                    </field>
                </sheet>
            </field>
        </record>

    </data>
</odoo>
