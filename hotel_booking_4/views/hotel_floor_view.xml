<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hotel_floor_view_form" model="ir.ui.view">
            <field name="name">hotel.floor hotel_booking</field>
            <field name="model">hotel.floor</field>
            <field name="inherit_id" ref="hotel.view_hotel_floor_form" />
            <field name="arch" type="xml">
                <sheet position="inside">
                    <group col="4">
                        <field name="background_color" />
                        <field name="background_image" />
                        <field name="pos_config_id" widget="image" />
                    </group>
                    <field name="room_ids">
                        <tree string='Tables'>
                            <field name="name" />
                            <field name="capacity" />
                        </tree>
                    </field>
                </sheet>
            </field>
        </record>

    </data>
</odoo>
