<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hotel_folio_view_form" model="ir.ui.view">
        <field name="name">hotel.folio.form.view</field>
        <field name="model">hotel.folio</field>
        <field name="inherit_id" ref="hotel.view_hotel_folio_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="pos_config" string="POS Config 2">
                    <button class="btn btn-primary" name="open_ui_2" type="object">
                        Select Room
                    </button>
                    <group>
                        <!-- <field name="module_pos_restaurant" />
                        <field name="is_table_management" /> -->
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <!-- booking -->
    <record id="hotel_folio_view_booking" model="ir.ui.view">
        <field name="name">hotel.folio.booking.view</field>
        <field name="model">hotel.folio</field>
        <field name="arch" type="xml">
            <booking image_field="image_url" tooltip_field="customer_id"/>
            <!-- <booking floor_model="hotel.floor" item_model="hotel.room" load_booking_data_model="hotel.folio"/> -->
        </field>
    </record>

    <!-- actions -->
    <record model="ir.actions.act_window" id="booking">
      <field name="name">Bookings</field>
      <field name="res_model">hotel.folio</field>
      <field name="view_mode">tree,form,booking</field>
    </record>

    <record model="ir.actions.client" id="dashboard">
      <field name="name">Dashboard</field>
      <field name="tag">hotel_booking.dashboard</field>
    </record>

    <!-- menu items -->
    <menuitem name="Dashboard" id="dashboard_menu" parent="hotel.hotel_management_menu" action="dashboard" sequence="1"/>
    <menuitem name="Booking" id="booking_menu" parent="hotel.hotel_management_menu" action="booking" sequence="2"/>


</odoo>
