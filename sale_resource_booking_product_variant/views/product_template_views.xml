<data>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">Display resource booking info in form INHERIT</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="sale_resource_booking.product_template_form_view" />
        <field name="arch" type="xml">
            <field name="resource_booking_type_id" position="attributes">
                <attribute name="attrs">{'readonly': [('product_variant_count', '&gt;', 1)]}</attribute>
            </field>
            <field name="resource_booking_type_combination_rel_id" position="attributes">
                <attribute name="attrs">{'readonly': [('product_variant_count', '&gt;', 1)]}</attribute>
            </field>
        </field>
    </record>
</data>
