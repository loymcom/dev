<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="resource_group_view_form" model="ir.ui.view">
        <field name="name">resource.group.view.form</field>
        <field name="model">resource.group</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="resource_ids" widget="many2many_tags" />
                        <field name="tag_ids" widget="many2many_tags" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="resource_group_view_tree" model="ir.ui.view">
        <field name="name">resource.group.view.tree</field>
        <field name="model">resource.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" optional="show" />
                <field name="resource_ids" widget="many2many_tags" />
                <field name="tag_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>
    <record id="resource_group_view_search" model="ir.ui.view">
        <field name="name">resource.group.view.search</field>
        <field name="model">resource.group</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="resource_ids" />
                <field name="tag_ids" />
            </search>
        </field>
    </record>
    <record id="resource_group_action" model="ir.actions.act_window">
        <field name="name">Resource Groups</field>
        <field name="res_model">resource.group</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="resource_group_menu"
        action="resource_group_action"
        parent="resource.menu_resource_config"
        name="Resource Group"
        sequence="20"
    />
</odoo>
