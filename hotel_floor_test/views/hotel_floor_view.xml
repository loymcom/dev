<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hotel_floor_view_form" model="ir.ui.view">
        <field name="name">hotel.floor hotel_booking</field>
        <field name="model">hotel.floor</field>
        <field name="inherit_id" ref="hotel.view_hotel_floor_form" />
        <field name="arch" type="xml">
            <sheet position="inside">
                <group col="4" string="Gallery Test">
                    <group>
                        <field name="customer_id" />
                    </group>
                    <group>
                        <field name="image_url" />
                    </group>
                </group>
                <group col="4" string="Rooms">
                    <field name="room_ids">
                        <tree>
                            <field name="name" />
                        </tree>
                    </field>
                </group>
            </sheet>
        </field>
    </record>

    <!-- gallery view -->
    <record id="hotel_folio_view_gallery" model="ir.ui.view">
        <field name="name">hotel.floor gallery view</field>
        <field name="model">hotel.floor</field>
        <field name="arch" type="xml">
            <gallery image_field="image_url" tooltip_field="customer_id"/>
        </field>
    </record>

    <!-- map view -->
    <record id="hotel_folio_view_map" model="ir.ui.view">
        <field name="name">hotel.floor map view</field>
        <field name="model">hotel.floor</field>
        <field name="arch" type="xml">
            <map2 items_field="room_ids" new_item_values="{'room_categ_id': 'default_room_type'}" />
        </field>
    </record>

   <!-- actions -->
    <record model="ir.actions.act_window" id="floor_test_action">
      <field name="name">Floor Test Action</field>
      <field name="res_model">hotel.floor</field>
      <field name="view_mode">tree,form,gallery,map2</field>
    </record>

    <!-- menu items -->
    <menuitem name="Floor Test" id="floor_test_menu" parent="hotel.hotel_configuration_menu" action="floor_test_action" sequence="100"/>

</odoo>
