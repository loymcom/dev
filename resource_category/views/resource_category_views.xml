<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="resource_category_view_form" model="ir.ui.view">
        <field name="name">resource.category.view.form</field>
        <field name="model">resource.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="resource_category_view_tree" model="ir.ui.view">
        <field name="name">resource.category.view.tree</field>
        <field name="model">resource.category</field>
        <field name="arch" type="xml">
            <tree>
                        <field name="name" optional="show" />
            </tree>
        </field>
    </record>
    <record id="resource_category_view_kanban" model="ir.ui.view">
        <field name="name">resource.category.view.kanban</field>
        <field name="model">resource.category</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="display_name" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="resource_category_view_pivot" model="ir.ui.view">
        <field name="name">resource.category.view.pivot</field>
        <field name="model">resource.category</field>
        <field name="arch" type="xml">
            <pivot>
            </pivot>
        </field>
    </record>
    <record id="resource_category_view_search" model="ir.ui.view">
        <field name="name">resource.category.view.search</field>
        <field name="model">resource.category</field>
        <field name="arch" type="xml">
            <search>
                        <field name="name" />
                <group string="Group By">
                    <filter
                        string="Name"
                        name="name"
                        context="{'group_by':'name'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="resource_category_action" model="ir.actions.act_window">
        <field name="name">Resource Category</field>
        <field name="res_model">resource.category</field>
        <field name="view_mode">tree,kanban,pivot,form</field>
    </record>
</odoo>
