<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="resource_resource_view_form" model="ir.ui.view">
        <field name="name">resource.resource.view.form</field>
        <field name="model">resource.resource</field>
        <field name="inherit_id" ref="resource.resource_resource_form" />
        <field name="arch" type="xml">
            <field name="resource_type" position="after">
                <field name="category_id" />
                <field name="category_ids" widget="many2many_tags" />
            </field>
        </field>
    </record>
    <record id="resource_resource_view_tree" model="ir.ui.view">
        <field name="name">resource.resource.view.tree</field>
        <field name="model">resource.resource</field>
        <field name="inherit_id" ref="resource.resource_resource_tree" />
        <field name="arch" type="xml">
            <tree position="inside">
                <field name="category_id" optional="hide" />
                <field name="category_ids" optional="hide" widget="many2many_tags" />
            </tree>
        </field>
    </record>
</odoo>
