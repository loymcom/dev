<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="fh_room_type_option_view_form" model="ir.ui.view">
        <field name="name">fh.room.type.option.view.form</field>
        <field name="model">fh.room.type.option</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="room_type_id" />
                        <field name="price" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="fh_room_type_option_view_tree" model="ir.ui.view">
        <field name="name">fh.room.type.option.view.tree</field>
        <field name="model">fh.room.type.option</field>
        <field name="arch" type="xml">
            <tree>
                        <field name="name" optional="show" />
                        <field name="room_type_id" optional="show" />
                        <field name="price" optional="show" />
            </tree>
        </field>
    </record>
    <record id="fh_room_type_option_view_kanban" model="ir.ui.view">
        <field name="name">fh.room.type.option.view.kanban</field>
        <field name="model">fh.room.type.option</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="display_name" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="fh_room_type_option_view_pivot" model="ir.ui.view">
        <field name="name">fh.room.type.option.view.pivot</field>
        <field name="model">fh.room.type.option</field>
        <field name="arch" type="xml">
            <pivot>
            </pivot>
        </field>
    </record>
    <record id="fh_room_type_option_view_search" model="ir.ui.view">
        <field name="name">fh.room.type.option.view.search</field>
        <field name="model">fh.room.type.option</field>
        <field name="arch" type="xml">
            <search>
                        <field name="name" />
                        <field name="room_type_id" />
                        <field name="price" />
                <group string="Group By">
                    <filter
                        string="Name"
                        name="name"
                        context="{'group_by':'name'}"
                    />
                    <filter
                        string="Room Type Id"
                        name="room_type_id"
                        context="{'group_by':'room_type_id'}"
                    />
                    <filter
                        string="Price"
                        name="price"
                        context="{'group_by':'price'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="fh_room_type_option_action" model="ir.actions.act_window">
        <field name="name">Fh Room Type Option</field>
        <field name="res_model">fh.room.type.option</field>
        <field name="view_mode">tree,kanban,pivot,form</field>
    </record>
</odoo>
