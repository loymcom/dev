<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="fh_bed_space_view_form" model="ir.ui.view">
        <field name="name">fh.bed.space.view.form</field>
        <field name="model">fh.bed.space</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="type" />
                        <field name="room_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="fh_bed_space_view_tree" model="ir.ui.view">
        <field name="name">fh.bed.space.view.tree</field>
        <field name="model">fh.bed.space</field>
        <field name="arch" type="xml">
            <tree>
                        <field name="name" optional="show" />
                        <field name="type" optional="show" />
                        <field name="room_id" optional="show" />
            </tree>
        </field>
    </record>
    <record id="fh_bed_space_view_kanban" model="ir.ui.view">
        <field name="name">fh.bed.space.view.kanban</field>
        <field name="model">fh.bed.space</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="display_name" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="fh_bed_space_view_pivot" model="ir.ui.view">
        <field name="name">fh.bed.space.view.pivot</field>
        <field name="model">fh.bed.space</field>
        <field name="arch" type="xml">
            <pivot>
            </pivot>
        </field>
    </record>
    <record id="fh_bed_space_view_search" model="ir.ui.view">
        <field name="name">fh.bed.space.view.search</field>
        <field name="model">fh.bed.space</field>
        <field name="arch" type="xml">
            <search>
                        <field name="name" />
                        <field name="type" />
                        <field name="room_id" />
                <group string="Group By">
                    <filter
                        string="Name"
                        name="name"
                        context="{'group_by':'name'}"
                    />
                    <filter
                        string="Type"
                        name="type"
                        context="{'group_by':'type'}"
                    />
                    <filter
                        string="Room Id"
                        name="room_id"
                        context="{'group_by':'room_id'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="fh_bed_space_action" model="ir.actions.act_window">
        <field name="name">Fh Bed Space</field>
        <field name="res_model">fh.bed.space</field>
        <field name="view_mode">tree,kanban,pivot,form</field>
    </record>
</odoo>
